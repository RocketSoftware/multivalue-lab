    <Style x:Key="SBMultiValueFieldRowStyle" BasedOn="{StaticResource DefaultSBMultiValueFieldRowStyle}" TargetType="{x:Type sbc:SBMultiValueFieldRow}" />
    <!-- Cell editor style that is used when column and row layout is in effect and the grid is not interleaved. -->
    <Style x:Key="SBXCharSBFieldStyle" BasedOn="{StaticResource DefaultSBXCharSBFieldStyle}" TargetType="{x:Type sbc:SBField}" />

    <!-- Cell content style that is used when column and row layout is in effect and the grid is not interleaved. -->
    <Style x:Key="SBXCharSBFieldContentStyle" BasedOn="{StaticResource DefaultSBXCharSBFieldContentStyle}" TargetType="{x:Type sbc:SBField}" />
    
    <!-- Style used to style the grid for column and row layout when the grid is not interleaved. -->
    <Style x:Key="SBXCharGridControlStyle" BasedOn="{StaticResource DefaultSBXCharGridControlStyle}" TargetType="{x:Type sbx:SBXGridControl}" />
        
