    <!-- Grid styles -->
    <!-- *********** -->

    <!-- PART_FocusSite -->
    <Style x:Key="SBXSBTextBoxStyle"            BasedOn="{StaticResource DefaultSBXSBTextBoxStyle}"             TargetType="{x:Type sbc:SBTextBox}" />
