    <!-- ************************** -->
    <!-- Card view specific styles  -->
    <!-- ************************** -->

    <!-- PART_SBGridControl -->
    <Style x:Key="SBXCardViewControlStyle"              BasedOn="{StaticResource DefaultSBXCardViewControlStyle}"           TargetType="{x:Type sbx:SBXGridControl}" />

    <!-- PART_SBField -->
    <Style x:Key="SBXCardViewSBToggleStyle"             BasedOn="{StaticResource DefaultSBXCardViewSBToggleStyle}"              TargetType="{x:Type sbc:SBToggle}" />
    <Style x:Key="SBXCardViewSBComboBoxStyle"           BasedOn="{StaticResource DefaultSBXCardViewSBComboBoxStyle}"            TargetType="{x:Type sbc:SBComboBox}" />
    <Style x:Key="SBXCardViewSBComboBoxContentStyle"    BasedOn="{StaticResource DefaultSBXCardViewSBComboBoxContentStyle}"     TargetType="{x:Type sbc:SBComboBox}" />

        <!-- Style for the card view that uses a StackPanel as opposed to a StackPanel by default -->
