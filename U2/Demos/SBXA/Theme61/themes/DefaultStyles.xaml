    <Style x:Key="SBXSBTextBoxContentStyle"     BasedOn="{StaticResource DefaultSBXSBTextBoxContentStyle}"      TargetType="{x:Type sbc:SBTextBox}" />
    <!-- PART_FocusSite -->
    <Style x:Key="SBXToggleStyle"               BasedOn="{StaticResource DefaultSBXToggleStyle}"                TargetType="{x:Type CheckBox}" />
    
