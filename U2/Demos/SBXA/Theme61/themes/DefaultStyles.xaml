    <Style x:Key="SBXSBComboBoxStyle"                         BasedOn="{StaticResource DefaultSBXSBComboBoxStyle}"                         TargetType="{x:Type sbc:SBComboBox}" />    
    <Style x:Key="SBXSBComboBoxControlStyle"                  BasedOn="{StaticResource DefaultSBXSBComboBoxControlStyle}"                  TargetType="{x:Type ComboBox}" />
    <Style x:Key="SBXSBFocusComboBoxControlStyle"             BasedOn="{StaticResource DefaultSBXSBFocusComboBoxControlStyle}"             TargetType="{x:Type ComboBox}" />
