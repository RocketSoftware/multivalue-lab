    <!--<Style x:Key="SBXCharacterInterleavedGridViewStyle"     BasedOn="{StaticResource DefaultSBXCharacterInterleavedGridViewStyle}"  TargetType="{x:Type sbc:SBMvEditControl}" />-->
    
    <!-- Style used to layout a grid using GUI (device dependent) pixels. -->
    <Style x:Key="SBXGuiGridViewStyle"                      BasedOn="{StaticResource DefaultSBXGuiGridViewStyle}"                   TargetType="{x:Type sbc:SBMvEditControl}" />
    
    <!-- Style to style a grid separator TextBlock -->
    <Style x:Key="SBXSeparatorStyle"                        BasedOn="{StaticResource DefaultSBXSeparatorStyle}"                     TargetType="{x:Type TextBlock}" />

    <!-- Style for the TableView in the grid -->
    <Style x:Key="SBXTableViewStyle"                        BasedOn="{StaticResource DefaultSBXTableViewStyle}"                     TargetType="{x:Type sbx:SBXGridView}" />

