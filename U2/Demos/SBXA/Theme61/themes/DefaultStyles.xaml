    <Style x:Key="SBXGridCardViewImageStyle"                BasedOn="{StaticResource DefaultSBXGridCardViewImageStyle}"             TargetType="{x:Type sbc:SBMvEditControl}" />

    <!-- For 3D view with an image. -->
    <Style x:Key="SBX3DViewStyle"                           BasedOn="{StaticResource DefaultSBX3DViewStyle}"                        TargetType="{x:Type sbc:SBMvEditControl}" />

    <!-- Style used to force an Interleaved grid to apear as a regular grid, with the data forming a single row. -->
    <Style x:Key="SBXInterleavedGridViewStyle"              BasedOn="{StaticResource DefaultSBXInterleavedGridViewStyle}"           TargetType="{x:Type sbc:SBMvEditControl}" />
    <!-- Style to force the grid to use the character layout methodology, even if the form is using pixel based layout. -->
    <Style x:Key="SBXCharLayoutGridViewStyle"               BasedOn="{StaticResource DefaultSBXCharLayoutGridViewStyle}"            TargetType="{x:Type sbc:SBMvEditControl}" />

    <!-- SBXGridControl style for Interleaved grids -->
    <Style x:Key="SBXInterleavedGridControlStyle"           BasedOn="{StaticResource DefaultSBXInterleavedGridControlStyle}"        TargetType="{x:Type sbx:SBXGridControl}" />
    
    <!-- SBField styles for Interleaved grids. -->
    <Style x:Key="SBXISBFieldStyle"                         BasedOn="{StaticResource DefaultSBXISBFieldStyle}"                      TargetType="{x:Type sbc:SBField}" />
    <Style x:Key="SBXISBFieldContentStyle"                  BasedOn="{StaticResource DefaultSBXISBFieldContentStyle}"               TargetType="{x:Type sbc:SBField}" />
    <Style x:Key="SBXISBTextBoxStyle"                       BasedOn="{StaticResource DefaultSBXISBTextBoxStyle}"                    TargetType="{x:Type sbc:SBTextBox}" />

